{
  "swagger": "2.0",
  "info": {
    "description": "API REST servidor del Trabajo de Fin de Grado `Presentación virtual controlado desde termina móvil`, de la titulación [Grado en Ingeniería Telemática - EPSL](https://www.ujaen.es/estudios/oferta-academica/grados/grado-en-ingenieria-telematica-eps-linares)<br><br><i>Realizado por:</i> <b>Sergio Caballero Garrido</b> con la ayuda del tutor <b>Juan Carlos Cuevas Martínez</b>.",
    "version": "1.1.0",
    "title": "TFG: Presentacion virtual",
    "contact": {
      "name": "Sergio Caballero Garrido",
      "email": "scg00046@red.ujaen.es"
    }
  },
  "externalDocs": {
    "description": "Escuela Politécnica Superior de Linares, Universidad de Jaén",
    "url": "https://epsl.ujaen.es/"
  },
  "host": "localhost:8080",
  "basePath": "/virtualpresentation",
  "tags": [
    {
      "name": "Usuario",
      "description": "Datos del usuario y acceso"
    },
    {
      "name": "Presentaciones",
      "description": "Listado de presentaciones, subida y eliminación"
    },
    {
      "name": "Sesiones",
      "description": "Crear y eliminar sesiones"
    },
    {
      "name": "Portal",
      "description": "Portal de presentación",
      "externalDocs": {
        "description": "Enlace de ejemplo",
        "url": "http://localhost:8080/virtualpresentation/user/session"
      }
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/usuario": {
      "post": {
        "tags": [
          "Usuario"
        ],
        "summary": "Autenticación en la aplicación",
        "description": "Permite autenticarse en la aplicación y obtener los datos del usuario",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "User",
            "description": "Datos de autenticación",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Autenticacion"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Información del usuario",
            "schema": {
              "$ref": "#/definitions/Usuario"
            }
          },
          "400": {
            "$ref": "#/responses/400"
          },
          "401": {
            "$ref": "#/responses/401"
          },
          "500": {
            "$ref": "#/responses/500"
          }
        }
      },
      "put": {
        "tags": [
          "Usuario"
        ],
        "summary": "Registro de usuario",
        "description": "Permite registrarse en la aplicación",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "User",
            "description": "Datos de usuario",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "nombreusuario": {
                  "type": "string"
                },
                "nombre": {
                  "type": "string"
                },
                "apellidos": {
                  "type": "string"
                },
                "password": {
                  "type": "string",
                  "format": "password"
                },
                "email": {
                  "type": "string",
                  "format": "email"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Registro completo",
            "schema": {
              "type": "string"
            }
          },
          "400": {
            "$ref": "#/responses/400"
          },
          "409": {
            "description": "El usuario ya está registrado",
            "schema": {
              "type": "string"
            }
          },
          "500": {
            "$ref": "#/responses/500"
          }
        }
      },
      "get": {
        "tags": [
          "Usuario"
        ],
        "security": [
          {
            "token": []
          }
        ],
        "summary": "Cierra sesión de usuario",
        "description": "Permite cerrar sesión y eliminar el token",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "Sesión cerrada",
            "schema": {
              "type": "string"
            }
          },
          "401": {
            "$ref": "#/responses/401"
          },
          "500": {
            "$ref": "#/responses/500"
          }
        }
      }
    },
    "/{usuario}": {
      "get": {
        "tags": [
          "Presentaciones"
        ],
        "security": [
          {
            "token": []
          }
        ],
        "summary": "Listar presentaciones",
        "description": "Consulta la lista de presentaciones registradas",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "$ref": "#/parameters/Usuario"
          }
        ],
        "responses": {
          "200": {
            "description": "Listado de presentaciones",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Presentacion"
              }
            }
          },
          "204": {
            "description": "No hay presentaciones para el usuario",
            "schema": {
              "type": "array",
              "items": {}
            }
          },
          "401": {
            "$ref": "#/responses/401"
          },
          "403": {
            "$ref": "#/responses/403"
          },
          "500": {
            "$ref": "#/responses/500"
          }
        }
      },
      "put": {
        "tags": [
          "Presentaciones"
        ],
        "security": [
          {
            "token": []
          }
        ],
        "summary": "Almacena nueva presentación en el servidor",
        "description": "Consulta la lista de presentaciones registradas",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "$ref": "#/parameters/Usuario"
          },
          {
            "in": "formData",
            "name": "presentacion",
            "description": "Presentacion a almacenar en formato PDF",
            "type": "file",
            "x-mimetype": "application/pdf"
          }
        ],
        "responses": {
          "200": {
            "description": "Presentacion almacenada",
            "schema": {
              "type": "string"
            }
          },
          "400": {
            "$ref": "#/responses/400"
          },
          "401": {
            "$ref": "#/responses/401"
          },
          "403": {
            "$ref": "#/responses/403"
          },
          "409": {
            "description": "La presentación ya existe",
            "schema": {
              "type": "string"
            }
          },
          "500": {
            "$ref": "#/responses/500"
          }
        }
      },
      "delete": {
        "tags": [
          "Presentaciones"
        ],
        "security": [
          {
            "token": []
          }
        ],
        "summary": "Elimina presentación",
        "description": "Elimina la presentación seleccionda, así como el listado de notas permanentes",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "$ref": "#/parameters/Usuario"
          },
          {
            "in": "header",
            "name": "presentacion",
            "required": true,
            "description": "Nombre de la presentación a eliminar",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Presentacion eliminada",
            "schema": {
              "type": "string"
            }
          },
          "401": {
            "$ref": "#/responses/401"
          },
          "403": {
            "$ref": "#/responses/403"
          },
          "500": {
            "$ref": "#/responses/500"
          }
        }
      }
    },
    "/session/{usuario}": {
      "post": {
        "tags": [
          "Sesiones"
        ],
        "security": [
          {
            "token": []
          }
        ],
        "summary": "Crea nueva sesión",
        "description": "Permite generar una sesión para el usuario",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "$ref": "#/parameters/Usuario"
          },
          {
            "in": "body",
            "name": "Sesión",
            "description": "Datos de la sesión",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Sesion"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Sesión creada",
            "schema": {
              "type": "string"
            }
          },
          "401": {
            "$ref": "#/responses/401"
          },
          "403": {
            "$ref": "#/responses/403"
          },
          "500": {
            "$ref": "#/responses/500"
          }
        }
      },
      "delete": {
        "tags": [
          "Sesiones"
        ],
        "security": [
          {
            "token": []
          }
        ],
        "summary": "Elimina sesión",
        "description": "Elimina la sesión registrada a partir del usuario y el nombre de la sesión",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "$ref": "#/parameters/Usuario"
          },
          {
            "in": "header",
            "name": "session",
            "description": "Nombre de la sesión a eliminar",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Sesión borrada",
            "schema": {
              "type": "string"
            }
          },
          "401": {
            "$ref": "#/responses/401"
          },
          "403": {
            "$ref": "#/responses/403"
          },
          "500": {
            "$ref": "#/responses/500"
          }
        }
      }
    },
    "/{usuario}/{sesion}": {
      "get": {
        "tags": [
          "Portal"
        ],
        "summary": "Portal presentación",
        "description": "Portal web exposición de presentación por sesiones",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "text/html"
        ],
        "parameters": [
          {
            "$ref": "#/parameters/Usuario"
          },
          {
            "$ref": "#/parameters/Sesion"
          }
        ],
        "responses": {
          "200": {
            "description": "Portal de presentación"
          },
          "400": {
            "description": "Error en la sesión"
          },
          "500": {
            "$ref": "#/responses/500"
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "token": {
      "type": "apiKey",
      "name": "Autenticacion",
      "in": "header"
    }
  },
  "definitions": {
    "Usuario": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "nombreusuario": {
          "type": "string"
        },
        "nombre": {
          "type": "string"
        },
        "apellidos": {
          "type": "string"
        },
        "token": {
          "type": "string"
        }
      }
    },
    "Autenticacion": {
      "type": "object",
      "properties": {
        "user": {
          "description": "Nick de usuario",
          "type": "string"
        },
        "password": {
          "type": "string",
          "format": "password"
        }
      }
    },
    "Presentacion": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "nombrepresentacion": {
          "type": "string"
        },
        "numpags": {
          "type": "integer"
        }
      }
    },
    "Sesion": {
      "type": "object",
      "properties": {
        "session": {
          "type": "string"
        },
        "presentation": {
          "type": "string"
        }
      }
    }
  },
  "parameters": {
    "Usuario": {
      "in": "path",
      "name": "usuario",
      "description": "Nick de usuario",
      "required": true,
      "type": "string"
    },
    "Sesion": {
      "in": "path",
      "name": "sesion",
      "description": "Nombre de la sesión",
      "required": true,
      "type": "string"
    }
  },
  "responses": {
    "400": {
      "description": "No se han recibido datos",
      "schema": {
        "type": "string"
      }
    },
    "401": {
      "description": "Datos de autenticación incorrectos",
      "schema": {
        "type": "string"
      }
    },
    "403": {
      "description": "Parámetros incorrectos o incompletos",
      "schema": {
        "type": "string"
      }
    },
    "500": {
      "description": "Error en el servidor",
      "schema": {
        "type": "string"
      }
    }
  }
}